<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.classroom">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Classroom">
        <activity
            android:name=".Activity.AssignMarks"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.CreateTest"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.ViewSubmissions"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.PreviousAssinngmentView"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.CreateAssingment"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.SubmittedAssingmentView"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.AssingmentSubmission"
            android:screenOrientation="portrait" />
        <activity android:name=".Activity.SubjectScreen" />
        <activity
            android:name=".Activity.JoinClass"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.ResetUser"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.RegisterUser"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.LoginUser"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.MainActivity" />
    </application>

</manifest>